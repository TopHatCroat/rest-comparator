{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "lib": ["es2015", "dom"]
  },
  "include": [
    "./src/**/*"
  ]
}